{
  // Indentation
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,

  // Formatting
  // Disable Prettier for JS/JSX/TSX (let ESLint handle formatting)

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": false
  },

  // ESLint
  "eslint.enable": true,
  "eslint.run": "onSave",
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Prettier settings (applies when no .prettierrc is found)
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "always",
  "prettier.endOfLine": "lf",
  "prettier.quoteProps": "as-needed",
  "prettier.proseWrap": "preserve",

  // Ensure Prettier works even without a config file
  "prettier.requireConfig": false,
  "prettier.configPath": ".prettierrc",

  // Editor UI
  "editor.fontSize": 22,
  "editor.fontFamily": "Fira Code, Operator Mono",
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "selection",
  "files.trimTrailingWhitespace": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.cursorBlinking": "expand",

  // Theme
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vscode-icons",

  // Terminal
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontFamily": "Fira Code, Operator Mono",

  // Auto-save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000
}
